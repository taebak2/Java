	</context-param>
	
	<context-param>
		<param-name>BLOCK_COUNT</param-name>
		<param-value>10</param-value>
	</context-param>
	
<servlet>
	<servlet-name>BoardController</servlet-name>
	<servlet-class>mvc.controller.BoardController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>BoardController</servlet-name>
